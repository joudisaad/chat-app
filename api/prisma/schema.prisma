generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Message {
  id        String   @id @default(uuid())
  content   String
  createdAt DateTime @default(now())
  sender    String
  roomId    String

  team   Team   @relation(fields: [teamId], references: [id])
  teamId String
}

enum ConversationStatus {
  OPEN
  PENDING
  RESOLVED
}

model Conversation {
  id            String   @id @default(uuid())
  roomId        String   @unique
  lastSender    String?
  lastPreview   String?
  lastMessageAt DateTime @default(now())
  createdAt     DateTime @default(now())

  team    Team    @relation(fields: [teamId], references: [id])
  teamId  String
  inboxId String?
  inbox   Inbox?  @relation(fields: [inboxId], references: [id])

  status     ConversationStatus @default(OPEN)
  assigneeId String?
  assignee   User?              @relation("ConversationAssignee", fields: [assigneeId], references: [id])

  etiquettes        ConversationEtiquette[]
  unreadCount       Int                     @default(0)
  lastAgentReadAt   DateTime?
  lastReadByAgentId String?
  lastReadByAgent   User?                   @relation("ConversationLastRead", fields: [lastReadByAgentId], references: [id])
}

model ConversationEtiquette {
  conversationId String
  etiquetteId    String

  conversation Conversation @relation(fields: [conversationId], references: [id])
  etiquette    Etiquette    @relation(fields: [etiquetteId], references: [id])

  @@id([conversationId, etiquetteId]) // composite PK = no duplicates
}

model Etiquette {
  id          String   @id @default(cuid())
  name        String
  slug        String
  color       String
  description String?

  teamId      String?
  team        Team?    @relation(fields: [teamId], references: [id], onDelete: Cascade)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  conversations ConversationEtiquette[]

  @@unique([teamId, slug])
}

model Team {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  publicKey String? @unique

  memberships    TeamMembership[]
  conversations  Conversation[]
  messages       Message[]
  inboxes        Inbox[]
  widgetSettings WidgetSettings?
  etiquettes     Etiquette[] // <-- add this
}

model Inbox {
  id     String @id @default(uuid())
  name   String
  teamId String
  team   Team   @relation(fields: [teamId], references: [id])

  isDefault Boolean @default(false)

  conversations Conversation[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String
  name         String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  memberships           TeamMembership[]
  assignedConversations Conversation[]   @relation("ConversationAssignee")
  lastReadConversations Conversation[]   @relation("ConversationLastRead")
}

model TeamMembership {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  team      Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  teamId    String
  role      String // "owner" | "admin" | "agent"
  createdAt DateTime @default(now())
}

model WidgetSettings {
  id        String   @id @default(uuid())
  teamId    String   @unique
  team      Team     @relation(fields: [teamId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  launcherColor     String @default("#22c55e")
  launcherTextColor String @default("#020617")
  launcherPosition  String @default("right") // "right" | "left"
  launcherLabel     String @default("Chat")
}
